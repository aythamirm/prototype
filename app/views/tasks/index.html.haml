.row-fluid
  %ul#thumbnails
    %li.span3.pull-left.sidebar
      .content
        .divider
        .my-profile 
          = image_tag(current_user.avatar.url)
          .first-child
            = "Welcome #{current_user.first_name}"
            %br
            %span
              = link_to('Edit account', edit_user_registration_path)
        .divider
        %h3 Control panel
        %ul.nav.nav-pill.nav-stacked
          %li.active
            %i.icon-inbox= link_to('INBOX',"#{tasks_path}?key=inbox")
            .badge.pull-right= current_user.nodes.where(action: 'Inbox').count
          %li
            %i.icon-inbox= link_to('Next',"#{tasks_path}?key=next")
            .badge.pull-right= current_user.nodes.where(action: 'Next').count   
          %li
            %i.icon-inbox= link_to('Project',"#{tasks_path}?key=project")
            .badge.pull-right= current_user.nodes.where(action: 'Project').count  
          %li
            %i.icon-inbox= link_to('Waiting',"#{tasks_path}?key=waiting")
            .badge.pull-right= current_user.nodes.where(action: 'Waiting').count  
          %li
            %i.icon-inbox= link_to('Someday',"#{tasks_path}?key=someday")
            .badge.pull-right= current_user.nodes.where(action: 'Someday').count 
          %li.divider
          %h3 Cleanup
          %li
            %i.icon-book= link_to('Logbook',tasks_path)
            .badge.pull-right= current_user.nodes.count
          %li
            %i.icon-trash
              %a{:href=>"#calendar"} Trash               
        %h3 Search panel
        = render 'filter/form' 
    %li.span9.pull-right.sidebar
      %h1.page-header Work Desk
      .class.alert.adjusted.alert-info
        %button.close{:type => "button", "data-dismiss" => "alert"} x
        %i.cus-exclamation
        %strong Welcome to Work Desk Please don't forget to check out  all the task and project
      %ul.nav.nav-tabs#myTab
        %li.active
          %a{:href=>"#inbox", :"data-toogle"=>"tab"} 
            %i.icon-inbox INBOX      
        %li
          %a{:href=>"#calendar", :"data-toogle"=>"tab"}
            %i.icon-calendar CALENDAR 
        %li
          %a{:href=>"#statistics", :"data-toogle"=>"tab"} STATISTICS
        %li
          %a{:href=>"#notification", :"data-toogle"=>"tab"} 
            %i.icon-file NOTIFICATION  
        %li
          %a{:href=>"#social", :"data-toogle"=>"tab"} SOCIAL    
      .thumbnail
        .tab-content#myTabContent
          .tab-pane.fade.active.in#inbox          
            .sidebar(style="display:inline")
              %ol.sortable_tree{ data: { max_levels: 5, rebuild_url: rebuild_nodes_url } }
                = sortable_tree @nodes   
          .tab-pane.fade#calendar
            = link_to('New Event', '#NewtaskModal', data: { toggle: 'modal' } )
            .calendar
              %h2#month
                = link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") 
                = h @date.strftime("%B %Y") 
                = link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m")  
              = calendar_for @calendar_nodes, :year => @date.year, :month => @date.month do |calendar| 
                = calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday')
                = calendar.day(:day_method => :start_time )  do |date, nodes| 
                  = date.day
                  %ul
                    - for node in nodes 
                      %li= link_to h(node.task_name), node 
                      
          .tab-pane.fade#statistics  
            esto aquí es el statistics. 
          .tab-pane.fade#notification  
            esto aquí es el notification. 
          .tab-pane.fade#social  
            esto aquí es el social.               
  = render 'projects/form' 
  = render 'form' 

        
