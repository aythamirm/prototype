= link_to "GTD Task Manager", root_path, :class => 'brand brand-bootbus'
.nav-collapse.collapse
  %ul.nav.pull-right
    - if user_signed_in?
      %li
        = link_to('New Task', '#NewtaskModal', data: { toggle: 'modal' } )
      %li  
        = link_to('New Project', '#NewprojectModal', data: { toggle: 'modal' } )
    - if user_signed_in?
      %li
        = link_to('Logout', destroy_user_session_path, :method=>'delete')
    - else
      %li
        = link_to('Login', '#loginModal', data: { toggle: 'modal' } )
    - if !user_signed_in?
      %li
        = link_to('Sign up', '#SignupModal', data: { toggle: 'modal' })
   
        